ready = ->
  $("#shapes_select").change ->
    $.ajax
      url: "update_mods"
      data:
        shape_id: $("#shapes_select").val()

      dataType: "script"

    return

  $("#mods_select").change ->
    $.ajax
      url: "update_details"
      data:
        mod_id: $("#mods_select").val()

      dataType: "script"

    return

  $("#artcat_select").change ->
    $.ajax
      url: "update_artworks"
      data:
        artcat_id: $("#artcat_select").val()

      dataType: "script"

    return

  $("#artwork_select").change ->
    $.ajax
      url: "update_art"
      data:
        artwork_id: $("#artwork_select").val()

      dataType: "script"

    return

  $("#arch_switch").click ->
    $(".arch").toggle("slow");

  $("#colors_select").change ->
    selected = $(this).find('option:selected');

    $("#color_thumb").css('background-color', selected.data('support'));

  $("#fontcolor_select").change ->
    selected = $(this).find('option:selected');

    $("#printjob_lettering").css('color', selected.data('support'));
    

    return

  return

$(document).ready ready
$(document).on "page:load", ready
