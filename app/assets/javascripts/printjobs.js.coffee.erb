ready = ->
  $("#shapes_select").change ->
    $.ajax
      url: "update_mods"
      data:
        shape_id: $("#shapes_select").val()

      dataType: "script"

    return

  $("#mods_select").change ->
    $.ajax
      url: "update_details"
      data:
        mod_id: $("#mods_select").val()

      dataType: "script"

    return

  $("#colors_select").change ->
    selected = $(this).find('option:selected');

    $("#color_thumb").css('background-color', selected.data('support'));
    

    return

  return

$(document).ready ready
$(document).on "page:load", ready
