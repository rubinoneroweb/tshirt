<p id="notice"><%= notice %></p>

<h1>Coda di Stampa</h1>

<%= link_to 'Mostra/nascondi archiviati', '#', :class=>'button small ', :id=> 'arch_switch' %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Modello</th>
      
      <th>Colore/
      <br>Taglia</th>
      <th colspan="2">Artwork</th>
      <th>Strass</th>
      <th>Nome sotto</th>
      <th>Nome dietro</th>
      <th>Note</th>
      <th>Font</th>
      <th>testo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @printjobs.each do |printjob| %>
      <tr <%= if printjob.archived then "class=arch" end  %> >
        <td><%= printjob.name %></td>
        <td><%= printjob.shape.description %><br><%= printjob.shirt.description %></td>
        <td><%= printjob.color.description %>
        <br><%= printjob.size.description %></td>
        <td><%= image_tag 'catalog/'+ (printjob.artwork ? printjob.artwork.path : "notfound.jpg"), :class =>'thumb_art' %></td>
        <td><%= printjob.artwork ? printjob.artwork.name : "Nessuno" %></td>
        <td><%= printjob.diamond  ? "si" : "no" %></td>
        <td><%= printjob.name_under ? "si" : "no" %></td>
        <td><%= printjob.name_behind  ? "si" : "no"  %></td>
        <td><%= printjob.note %></td>
        <td><%= if printjob.font_id then printjob.font.name end%></td>
        
        <td><%= printjob.lettering %></td>
        <td><%= link_to 'O', printjob %></td>
        <td><%= link_to 'E', edit_printjob_path(printjob) %></td>
        <td><%= link_to 'X', printjob, method: :delete, data: { confirm: ( printjob.archived ? "Eliminare?" : "Vuoi segnare questo lavoro come archiviato?") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Home', '/', :class=>'button large expand' %>
